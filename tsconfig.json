{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "declaration": false,
        "sourceMap": false,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}